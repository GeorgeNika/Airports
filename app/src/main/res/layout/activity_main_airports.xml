<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/toolbar"/>

        <TextView
            android:id="@+id/text_hello"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_toolbar"/>

        <AutoCompleteTextView
            android:id="@+id/text_find_airport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_hello"/>

    </RelativeLayout>

    <!-- The navigation drawer -->

    <ScrollView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#80158dd0" >
        <!-- "#80158dd0" -->

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_edit_airports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Airports"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="button2 HTTP"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="button3 Location"/>

            <Button
                android:id="@+id/button_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Property"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FF158dd0" />

            <Button
                android:id="@+id/button_website_flightradar24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FlightRadar24.com"/>

            <Button
                android:id="@+id/button_website_planefinder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PlaneFinder.net"/>

            <Button
                android:id="@+id/button_website_flightaware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FlightAware.com"/>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>

